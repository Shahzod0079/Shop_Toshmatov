<UserControl x:Class="Shop_Toshmatov.Elements.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shop_Toshmatov.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Margin="20" 
                Width="200" 
                CornerRadius="20" 
                Background="#FF5A5A5A">

            <Border.Effect>
                <DropShadowEffect BlurRadius="3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Image Margin="20" 
                       Width="160" 
                       Source="D:\Shop_Toshmatov\Image\ic_item.png"/>

                <Label x:Name="tbName" 
                       Content="Наименование" 
                       Margin="10,10,10,0" 
                       Grid.Row="1"
                       HorizontalContentAlignment="Center" 
                       VerticalAlignment="Top" 
                       FontWeight="Bold"
                       Foreground="White"/>

                <Label x:Name="tbPrice" 
                       Content="Цена: " 
                       Margin="10,41,10,0" 
                       Grid.Row="1"
                       VerticalAlignment="Top" 
                       Foreground="White"/>

                <Label x:Name="tbCharacteristic" 
                       Content="Характеристика: " 
                       Margin="10,72,10,0"
                       Grid.Row="1" 
                       VerticalAlignment="Top" 
                       Foreground="White"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>